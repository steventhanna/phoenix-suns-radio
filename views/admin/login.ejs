<link rel="stylesheet" href="/styles/login.css">

<div class="background">
  <div class="container">
      <center>
        <div class="login-box">
          <div class="row">
            <div class="col-lg-12">
              <div class="title">
                <h1>Login</h1>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="body">
              <div class="input-group">
                <span class="input-group-addon" id="username-addon"><i class="fa fa-user"></i></span>
                <input type="text" class="form-control" id="username" placeholder="Username" aria-describedby="username-addon">
              </div>
              <div class="input-group">
                <span class="input-group-addon" id="password-addon"><i class="fa fa-lock"></i></span>
                <input type="password" class="form-control" id="password" placeholder="******" aria-describedby="password-addon">
              </div>
              <a class="btn btn-block btn-success">Log In</a>
            </div>
          </div>
        </div>
      </center>
  </div>
</div>
