<% include parts/depend %>
<% include parts/navbar %>

<div class="header">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h1>Enter Introduction Text Here</h1>
        <h3>Listen to our latest broadcast below.</h3>
        <%- broadcasts[0].embedCode %>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="row-title">
      <h1>Our Past Broadcasts</h1>
    </div>
  </div>
</div>
<div class="container">
  <% for (var i = 0; i < broadcasts.length; i++) { %>
    <div class="row cast-panel">
      <div class="col-lg-6">
        <h1><%= broadcasts[i].title %></h1>
        <h3><%= broadcasts[i].date %></h3>
        <p><%= broadcasts[i].summary %></p>
      </div>
      <div class="col-lg-6 align-right">
        <%- broadcasts[i].embedCode %>
      </div>
    </div>
    <hr>
  <% } %>
</div>
