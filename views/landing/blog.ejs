<% include parts/depend %>
<% include parts/navbar %>

<script src="/js/dependencies/marked.js"></script>

<div class="small-header">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h1><strong>Suns Talk Radio</strong> Blog</h1>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <br />
  <% if (blogs.length == 0) { %>
    <center><h1 style="font-weight: 300">No Blog Posts</h1></center>
  <%} else { %>
    <% for(var i = 0; i < blogs.length; i++) { %>
      <center><h1 style="margin-bottom: 20px;"><%= blogs[i].title %></h1></center>
      <center><h4>By <%= blogs[i].author %> | <%= blogs[i].lastUpdated %></h4></center>
      <p style="margin-bottom: 20px;"><%- blogs[i].preview %></p>
      <center><a class="btn btn-lg btn-default" href="/blog/<%= blogs[i].id %>">Read More</a></center>
    <% } %>
  <% } %>
</div>
