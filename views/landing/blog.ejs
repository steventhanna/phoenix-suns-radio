<% include parts/depend %>
<% include parts/navbar %>

<script src="/js/dependencies/marked.js"></script>

<div class="small-header">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h1><strong>Suns Talk Radio</strong> Blog</h1>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <br />
  <% if (blogs.length == 0) { %>
    <center><h1 style="font-weight: 300">No Blog Posts</h1></center>
  <%} else { %>
    <% for(var i = 0; i < blogs.length; i++) { %>
      <div class="blog">
        <h1 class="blog-header"><%= blogs[i].title %></h1>
        <h4>By <%= blogs[i].author %> | <%= blogs[i].lastUpdated %></h4>

        <% if (blogs[i].slice == true) { %>
          <p style="margin-bottom: 20px;"><%- blogs[i].preview %></p>
          <center><a style="margin-top: 20px; margin-bottom: 20px;" class="btn btn-lg btn-default" href="/blog/<%= blogs[i].blid %>">Read More</a></center>
        <% } else { %>
          <p style="margin-bottom: 20px;"><%- blogs[i].contents %></p>
          <% } %>
        </div>
    <% } %>
  <% } %>
</div>
